<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.activity.RegistrationActivity">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="117dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/foodlogo" />

    <!-- App Title -->
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="FoodApp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="Delivered your favourite Food"
        android:textSize="14sp" />

    <!-- Register Form -->
    <EditText
        android:id="@+id/registerFName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter first name"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/registerLName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter last name"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/registerAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter address"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/registerContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter phone number"
        android:inputType="phone"
        android:padding="10dp" />

    <EditText
        android:id="@+id/registerEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <EditText
        android:id="@+id/registerPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:backgroundTint="@drawable/greenbutton"
        android:textColor="@android:color/white" />

    <!-- Divider or Alternative Sign-in Option -->
    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="or"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Google and Facebook Login Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Google Sign-In Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonGoogle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/whitebutton"
            android:drawableLeft="@drawable/google1"
            android:text="Google"
            android:textSize="16sp" />

        <!-- Facebook Sign-In Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonFacebook"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/whitebutton"
            android:drawableLeft="@drawable/fb"
            android:text="Facebook"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
